<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
        <div class="card">
          <%= cl_image_tag @office.photo.key, class:"card-img-top", alt:"Poster", crop: :fill %>
          <div class="card-body">
            <h5 class="card-title">Address: <%= @office.address %></h5>
            <p class="card-text">Description: <%= @office.description %></p>
            <p class="card-text">Price: Â£<%= @office.price %></p>
              <p class="card-text">Owner: <%= @office.user.user_name %></p>
              <p class="card-text">Contact: <%= @office.user.email %></p>
          </div>

            <% if policy(@office).edit? %>
              <%= link_to(edit_office_path(@office)) do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to root_path,
                  method: :delete,
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: 'delete-link' do %>
                <i class="fa-regular fa-trash"></i>
              <% end %>
            <% end %>

        </div>
      </div>
  </div>
</div>
