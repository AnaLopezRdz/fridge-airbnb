<div class="justify-content-center">
  <div class="container">
    <h1><%= @office.name %></h1>
    <p class="flat-show-address"><%= @office.address %></p>
  </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="my-4 container">
      <div class="carousel-inner d-flex justify-content-between align-items-center">
        <% @office.photos.each do |photo| %>
          <div class="carousel-item <%= 'active' if photo == @office.photos[0] %>">
            <%# <img src="..." class="d-block w-100" alt="..."> %>
            <%= cl_image_tag photo.key, class:"d-block rounded", alt:"Poster", crop: :fill, style:" width: 100%; height: 400px;"  %>
          </div>
        <% end %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>


  <div class="d-flex justify-content-between">
    <div class="flex-grow-1">
      <div class="container">
        <div class="name-address">
          <div class="d-flex justify-content-between">
            <div class="flex-grow-1">
              <h1><%= @office.name %></h1>
              <p class="flat-show-address"><%= @office.address %></p>
            </div>
            <div class="flex-grow-1">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large width: 50px; border-radius: 50%;", alt: "avatar-large" %>
            </div>
          </div>
        </div>
        <hr>
        <br>
        <div class="description">
          <p><%= @office.description %></p>
          <hr>
          <br>
        </div>

      </div>
      <div class="map">
        <div style="my-3 width: 350px; height: 350px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
    </div>
    <div class="flex-grow-1">
      <div class="container">
        <h5>Book this place:</h5>
      </div>
      <form action="">
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">From:</span>
          <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mt-2">
          <span class="input-group-text" id="basic-addon1">To:</span>
          <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </div>
      </form>
      <%# <div class="icons">
        <p>Let's share: </p>
        <i class="fa-brands fa-facebook-square me-2 fa-2x"></i>
        <i class="fa-brands fa-twitter-square me-2 fa-2x"></i>
        <i class="fa-brands fa-pinterest-square me-2 fa-2x"></i>
      </div> %>
    </div>
  </div>
  <%= link_to "Edit", edit_office_path(@office) %>
</div>
