<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
        <div class="card">
          <%#= cl_image_tag @office.photos.key, class:"card-img-top", alt:"Poster", crop: :fill %>
          <% @office.photos.each do |photo| %>
            <%= cl_image_tag photo.key, class:"card-img-top", alt:"Poster", crop: :fill %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title">Address: <%= @office.address %></h5>
            <p class="card-text">Description: <%= @office.description %></p>
            <p class="card-text">Price: Â£<%= @office.price %></p>
              <p class="card-text">Contact: <%= @office.user.email %></p>
          </div>

            <% if policy(@office).edit? %>
                <%= link_to "Edit", edit_office_path(@office) %>

                <%= link_to office_path(@office),
                        method: :delete,
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: 'btn btn-danger delete-link' do %>
                  <%= content_tag :i, '', class: 'fa-solid fa-trash' %>
                <% end %>
            <% end %>

        </div>
      </div>
  </div>
</div>
