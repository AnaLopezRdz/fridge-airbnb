<div class="container  my-4">
  <h1 class="color-title"> You have visited: (<%= @bookings.length %>)</h1>
  <div class="two-items-per-row my-4">
    <% @bookings.each do |booking| %>
      <div class="mb-3 actual-card" style="max-width: 540px; ">
        <div class="row g-0 ">
          <div class="col-md-4">
            <%# <img src="..." class="img-fluid rounded-start" alt="..."> %>
            <%= cl_image_tag booking.office.photos.first.key, class:"d-block actual-pic ", alt:"Poster", crop: :fill, style:" width: 100%; height: 200px;"  %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title mx-2 my-3 color-title"><%= booking.office.name.capitalize%></h5>
              <p class="card-text text-truncate mx-2"><%= booking.office.address%></p>
            </div>
             <div class="border-bottom  my-2 mx-2">
              <p> From: <%=booking.start_date %> <br>
              To: <%= booking.end_date%></p>
            </div>
                  <div class="flat-card-actions mx-2">
            <%= link_to "More info...", booking_path(booking) %>
            <% if booking.start_date>Date.today+5 %>
            <%= link_to "cancel",
              booking_path(booking),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
              class: "ms-3 cancel-index-booking"
            %>
            <% end %>
        </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
